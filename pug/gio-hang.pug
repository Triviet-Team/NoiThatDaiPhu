extends _inc


block article
  article
    section.bread-crumb
      .container
        .bc-icons
          nav(aria-label='breadcrumb')
            ol.breadcrumb
              li.breadcrumb-item
                a(href='index.html') Trang chủ
              li.breadcrumb-item.active Sản phẩm

      section.cart-page
        .container
          .cart-page-product
            .table-responsive
              table.table.table-bordered
                thead
                  tr
                    th(scope='col') Sản phẩm
                    th(scope='col') Giá
                    th(scope='col') Số lượng
                    th(scope='col') Thành tiền
                tbody
                  tr
                    td.cart-page-product-1
                      img(src='../img/product-1.png', alt='')
                      h5
                        a(href='chi-tiet-san-pham.html') Logitech G502 Proteus Spectrum
                      .cart-remove
                        a(title='Xóa sản phẩm', href='#')
                          i.mdi.mdi-close
                    td
                      h4 Giá: Liên hệ
                    td.quantity
                      button.waves-effect.waves-light -
                      input(type='number', value='1', min='1')
